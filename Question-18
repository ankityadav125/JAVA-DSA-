//        Accept a day number between 1-7 and print the corresponding dayname


package Java_Questions;

import java.util.Scanner;

public class Question_18 {
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);

                System.out.print("Enter a day number (1-7): ");
                int days = sc.nextInt();

                String dayName;

                switch (days) {
                    case 1:
                        dayName = "Sunday";
                        break;
                    case 2:
                        dayName = "Monday";
                        break;
                    case 3:
                        dayName = "Tuesday";
                        break;
                    case 4:
                        dayName = "Wednesday";
                        break;
                    case 5:
                        dayName = "Thursday";
                        break;
                    case 6:
                        dayName = "Friday";
                        break;
                    case 7:
                        dayName = "Saturday";
                        break;
                    default:
                        dayName = "Invalid day number";
                        break;
                }

                System.out.println("Corresponding  is: " + dayName);
    }
}
